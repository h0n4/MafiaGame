<h1>Home Page</h1>

<% if(duplicate && duplicate.length > 0) { %>
<div class="alert alert-danger" role="alert">
    <%= duplicate %>
</div>
<% } %>

<form action="/newPlayer" method="POST">
    <input type="text" name="username" placeholder="Name" pattern=".{3,20}" title="Username must be between 3 to 20 characters" required>
    <button>Join</button>
</form>

<form action="/clear" method="POST">
    <button>Clear Table</button>
</form>